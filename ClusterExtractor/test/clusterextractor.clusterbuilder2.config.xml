<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
    <!-- ****************************************************************** -->
    <!-- ***** clusterextractor local clusterbuilder test properties ****** -->
    <!-- ****************************************************************** -->

    <!-- local work index property -->
    <entry key="search.index.main">/tmp/index2/</entry>

    <!-- local machine id -->
    <entry key="clusterbuilder.machineid">2</entry>

    <!-- local centroid set path property -->
    <entry key="clusterbuilder.localcentroidsetpath">/tmp/localbuildercentroidset2/</entry>
    <!-- vocabularies path property -->
    <entry key="clusterbuilder.localvocabpath">/tmp/localbuildervocabulary2/</entry>

    <!-- ****************************************************************** -->
    <!-- **************** INITIAL CANDIDATE PROPERTIES ******************** -->
    <!-- ****************************************************************** -->

    <!-- Fields to use in the init phase of vocabulary and cluster creation -->
    <entry key="clusterbuilder.FieldsUsedInInit">su_pe|su_corp|su_lc|mesh|su_dk|lsu_oai</entry>
    <!-- Fields not to in the init phase -->
    <entry key="clusterbuilder.NegativeFieldsInInit"></entry>

    <!-- Terms to use in the vocabulary in cluster creation -->
    <entry key="clusterbuilder.Terms"></entry>
    <!-- Terms not to use in the vocabulary (qzwq is a delimiter) -->
    <entry key="clusterbuilder.NegativeTerms">[0-9]+[.]?-? ?[0-9]+|[0-9]|og|view|and|of|the|.|new|with|on|to|etc|den|for|in|von|qzwq|til|med|om|af|p√•|det|er|as|ii|ud|no|st|se|na|al|is|man|it</entry>

    <!-- The minimum number of times that the term texts have to occur in the
         index for a given field, in order to be considered candidates
         for cluster algorithm initialisation -->
    <entry key="clusterbuilder.MinTermSum">15</entry>
    <!-- The minimum number of times that the term texts have to occur in the
         index for a single field_X, in order to be considered candidates -->
    <entry key="clusterbuilder.MinTermLocalSum">15</entry>
    <!-- The maximum number of times that the terms must occur in the
         index, in order to be considered tag candidates -->
    <entry key="clusterbuilder.MaxTermSum">99999</entry>

    <!-- Fields used for document vectors (inclusive list) -->
    <!-- This property is also used as the 'fieldsUsedInQueries' property,
         i.e. these are also the fields used in search-based algorithms -->
    <entry key="clusterbuilder.FieldsUsedInVectors">su_pe|su_corp|su_lc|mesh|su_dk|lsu_oai|title|main_titel|subject_controlled|subject_dk5|no|shortformat|sort_title|subject_other|commercials_subject</entry>
    <!-- Fields NOT used for document vectors (exclusive list) -->
    <entry key="clusterbuilder.NegativeFieldsInVectors"></entry>

    <!-- The minimum number of fields that the term text has to occur in to be
         considered a candidate for cluster algorithm initialisation. Only the
         fields used in vectors are considered. -->
    <entry key="clusterbuilder.MinNumberOfFields">2</entry>

    <!-- ****************************************************************** -->
    <!-- ************** INCREMENTAL CENTROID PROPERTIES ******************* -->
    <!-- ****************************************************************** -->

    <!-- Should the points (corresponding to the documents) be normalised when
         added to the incremental centroid? -->
    <entry key="clusterbuilder.NormaliseWhenAdding">true</entry>

    <!-- Optimise incremental centroid after addition of X points -->
    <entry key="clusterbuilder.OptimiseEveryXPoints">500</entry>

    <!-- The maximum size (number of terms) that a centroid can have after
         being optimised. This is a performance tweak. Lower values = better
         performance and worse approximation to the ideal result. -->
    <entry key="clusterbuilder.MaxSizeAfterOptimise">300</entry>

    <!-- The maximum number of points used to build the initial centroid  -->
    <entry key="clusterbuilder.MaxPointsToBuild">20000</entry>

    <!-- The maximum size (number of terms) that a centroid can have after it
         has been build -->
    <entry key="clusterbuilder.MaxFinalSize">200</entry>

    <!-- How many (fraction) of the original (search based) cluster members,
         i.e. the document vectors used to build the centroid,
         should be inside the defined cluster similarity threshold? -->
    <entry key="clusterbuilder.SimilarityThresholdFraction">.6</entry>

</properties>