<?xml version="1.0" encoding="UTF-8"?>
<!-- Setup for LuceneSearcher -->
<xproperties>
    <xproperties>
        <entry>
            <key>summa.control.service.port</key>
            <value class="int">2783</value>
        </entry>
        <entry>
            <key>summa.control.service.registry.port</key>
            <value class="int">27000</value>
        </entry>
        <entry>
            <key>summa.control.service.id</key>
            <value class="string">Search</value>
        </entry>

        <entry>
            <key>summa.search.node.class</key>
            <value class="string">dk.statsbiblioteket.summa.support.lucene.search.LuceneSearchNode</value>
        </entry>

        <entry>
            <key>search.clauses.max</key>
            <value class="int">20000</value>
        </entry>
        <entry>
            <key>summa.search.result-fields</key>
            <value class="string-array">
                <string>recordID</string>
                <string>shortformat</string>
            </value>
        </entry>
        <entry>
            <key>summa.search.fallback-values</key>
            <value class="string-array">
                <string>NoID</string>
                <string>NoShortformat</string>
            </value>
        </entry>
        <!--        <entry>
                    <key>summa.search.warmup.data</key>
                    <value class="string">/tmp/warmup...</value>
                </entry>-->
        <entry>
            <key>summa.search.warmup.maxtime</key>
            <value class="string">10000</value>
        </entry>
        <entry>
            <key>summa.search.maxRecords</key>
            <value class="int">10000</value>
        </entry>
        <entry>
            <key>summa.search.number-of-searchers</key>
            <value class="int">2</value>
        </entry>
        <entry>
            <key>summa.search.number-of-concurrent-searches</key>
            <value class="int">4</value>
        </entry>
        <entry>
            <key>summa.search.search-queue.max-size</key>
            <value class="int">50</value>
        </entry>
        <entry>
            <key>summa.search.searcher-availability.timeout</key>
            <value class="int">5000</value>
        </entry>
        <!-- IndexWatcher -->
        <entry>
            <key>summa.index-watcher.check-interval</key>
            <value class="int">1000</value>
        </entry>
        <entry>
            <key>summa.index-watcher.index-root</key>
            <value class="string">/tmp/summatest/index</value>
        </entry>
        <entry>
            <key>summa.index-watcher.min-retention</key>
            <!-- Very aggressive value - probably too low for production -->
            <value class="int">1000</value>
        </entry>
        <!-- LuceneIndexUtils -->
        <entry>
            <key>summa.index.descriptor-setup</key>
            <value class="xproperties">
                <entry>
                    <key>summa.common.index-descriptor.absolute-location</key>
                    <value class="string">/tmp/summatest/data/search/SearchTest_IndexDescriptor.xml</value>
                </entry>
            </value>
        </entry>
    </xproperties>
</xproperties>
