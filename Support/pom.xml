<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>${summaGroupId}</groupId>
    <artifactId>summa</artifactId>
    <version>${summaVersion}</version>
    <relativePath>../</relativePath>
  </parent>

  <artifactId>summa-support</artifactId>
  <name>Summa Support module</name>

  <build>
    <sourceDirectory>${basedir}/src/</sourceDirectory>
    <testSourceDirectory>${basedir}/test/</testSourceDirectory>
    <resources>
      <resource>
        <directory>config/</directory>
      </resource>
      <!-- We have some resource down in code directory -->
      <resource>
        <directory>src</directory>
        <excludes>
          <exclude>**/*.java</exclude>
        </excludes>
      </resource>
    </resources>
	<testResources>
      <testResource>
        <directory>${basedir}/test/data/</directory>
      </testResource>
    </testResources>
  </build>

    <!-- Dependencies for Summa Search -->
  <dependencies>
    <dependency>
      <groupId>com.h2database</groupId>
      <artifactId>h2</artifactId>
      <version>1.2.132</version>
    </dependency>
    <dependency>
      <groupId>dk.statsbiblioteket.lucene</groupId>
      <artifactId>lucene-core</artifactId>
    </dependency>
    <dependency>
      <groupId>dk.statsbiblioteket.lucene</groupId>
      <artifactId>lucene-queries</artifactId>
    </dependency>
    <dependency>
      <groupId>dk.statsbiblioteket.lucene</groupId>
      <artifactId>lucene-didyoumean</artifactId>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
    </dependency>
    <dependency>
      <groupId>dk.statsbiblioteket.sbutil</groupId>
      <artifactId>sbutil</artifactId>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
    </dependency>
    <!-- Local dependencies -->
    <dependency>
      <groupId>${summaGroupId}</groupId>
      <artifactId>summa-common</artifactId>
      <version>${summaVersion}</version>
    </dependency>
    <dependency>
      <groupId>${summaGroupId}</groupId>
      <artifactId>summa-index</artifactId>
      <version>${summaVersion}</version>
    </dependency>
    <dependency>
      <groupId>${summaGroupId}</groupId>
      <artifactId>summa-search</artifactId>
      <version>${summaVersion}</version>
    </dependency>
      <dependency>
      <groupId>${summaGroupId}</groupId>
      <artifactId>summa-ingest</artifactId>
      <version>${summaVersion}</version>
    </dependency>
    <dependency>
      <groupId>${summaGroupId}</groupId>
      <artifactId>summa-facetbrowser</artifactId>
      <version>${summaVersion}</version>
    </dependency>
  </dependencies>
</project>