    <target name="bundle-storage" depends=".jar, compile">
        <mkdir dir="${tmp.dir}"/>

        <!-- Create jar file for Storage service -->
        <jar basedir="${build.dir}" compress="true" jarfile="${tmp.dir}/storage-service-${summa.version}.jar"/>

        <!-- Roll service bundle -->
        <copy todir="${tmp.dir}">
