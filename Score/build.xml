    <target name=".test-client-1.bundle" depends=".jar, test.compile">
        <mkdir dir="${tmp.dir}"/>

        <!-- Roll client bundle -->
        <copy todir="${tmp.dir}">
            <fileset dir="${test.src.dir}" includes="**/*.xml"/>
        </copy>
        <replace value="!not found!" propertyfile="../build.properties"
                 dir="${tmp.dir}">
            <replacefilter
