<?xml version="1.0"?>
<project default="all" name="Workflow" basedir=".">

    <!--
       PROPERTIES
    -->

    <property file="${basedir}/../build.properties"/>

    <!-- Project properties -->
    <property name="project.name" value="summa-workflow"/>
    <property name="project.version" value="${summa.version}"/>
    <property name="release" value="${project.name}-${project.version}"/>
    <property name="release.jar" value="${release}.jar"/>

    <!-- Persistent directories -->
    <property name="src.dir" value="${basedir}/src"/>
    <property name="test.src.dir" value="${basedir}/test"/>
    <property name="config.dir" value="${basedir}/config"/>

    <!-- Temporary files and directories -->
    <property name="build.dir" value="${basedir}/${summa.classes.dir}"/>
    <property name="dist.dir" value="${basedir}/${summa.dist.dir}"/>
    <property name="doc.dir" value="${basedir}/${summa.apidocs.dir}"/>
    <property name="lib.dir" value="${basedir}/lib"/>
    <property name="tmp.dir" value="${basedir}/tmp"/>
    <property  name="test.report.dir" value="${basedir}/test/reports/" />

    <!-- Compilation properties -->
    <property name="compiler" value="${summa.compiler}"/>
    <property name="compiler.optimize" value="${summa.compiler.optimize}"/>
    <property name="compiler.debug" value="${summa.compiler.debug}"/>
    <tstamp>
        <format property="build.time" pattern="MM/dd/yyyy HH:mm"/>
    </tstamp>

    <!-- Path definitions -->
    <path id="lib.path">
        <fileset dir="${lib.dir}">
            <include name="**/*.jar"/>
            <!-- <exclude name="junit*"/> -->
        </fileset>
    </path>

    <path id="test.lib.path">
        <path refid="lib.path" />
        <pathelement location="${build.dir}" />
        <pathelement location="${ant.home}/lib/ant-junit.jar"/>
        <pathelement location="${test.src.dir}"/>
    </path>

    <!-- lib.files : set by the .checkDepends target -->


    <!--
       TARGETS
    -->

    <target name=".phony"><!-- Dummy target --></target>

    <target name=".releaseCommon">
        <ant inheritAll="false" dir="../Common" target="release"/>
    </target>

    <target name=".releaseStorage">
        <ant inheritAll="false" dir="../Storage" target="release"/>
    </target>

    <target name=".releaseSearch">
        <ant inheritAll="false" dir="../Search" target="release"/>
    </target>

    <target name=".releaseControl">
        <ant inheritAll="false" dir="../Control" target="release"/>
    </target>

    <target name=".releaseIngest">
        <ant inheritAll="false" dir="../Ingest" target="release"/>
    </target>

    <target name="depends">
        <!-- Check global dependencies -->
        <ant inheritall="false" dir=".." target="depends"/>

        <!-- If libs/ does not exist, call getLibs target -->
        <echo message="Checking for libs/"/>
        <condition property="newTask" value=".phony" else=".getLibs">
            <and>
                <available file="${summa.lib.log4j}"/>
                <available file="${summa.lib.commons-logging}"/>
                <available file="${summa.lib.commons-cli}"/>
                <available file="${summa.lib.junit}"/>
                <available file="${summa.lib.sbutil}"/>
            </and>
        </condition>
        <antcall target="${newTask}"/>

        <!-- Check that Common is compiled -->
        <echo message="Checking whether Common is compiled"/>
        <condition property="compileCommonTask" value=".phony" else=".releaseCommon">
            <available file="${basedir}/../${summa.ilib.common}"/>
        </condition>
        <antcall target="${compileCommonTask}"/>

        <!-- Check that Storage is compiled -->
        <echo message="Checking whether Storage API is compiled"/>
        <condition property="compileStorageTask" value=".phony" else=".releaseStorage">
            <available file="${basedir}/../${summa.ilib.storage.api}"/>
        </condition>
        <antcall target="${compileStorageTask}"/>

        <!-- Check that Storage is compiled -->
        <echo message="Checking whether Search API is compiled"/>
        <condition property="compileSearchTask" value=".phony" else=".releaseSearch">
            <available file="${basedir}/../${summa.ilib.search.api}"/>
        </condition>
        <antcall target="${compileSearchTask}"/>

        <!-- Check that Ingest is compiled -->
        <echo message="Checking whether Ingest is compiled"/>
        <condition property="compileIngestTask" value=".phony" else=".releaseIngest">
            <available file="${basedir}/../${summa.ilib.ingest}"/>
        </condition>
        <antcall target="${compileIngestTask}"/>

        <!-- Check that Storage is compiled -->
        <echo message="Checking whether Control API is compiled"/>
        <condition property="compileControlTask" value=".phony" else=".releaseControl">
            <available file="${basedir}/../${summa.ilib.control.api}"/>
        </condition>
        <antcall target="${compileControlTask}"/>

        <!-- Always copy internal libs over -->
        <copy file="${basedir}/../${summa.ilib.common}" todir="${lib.dir}"/>
        <copy file="${basedir}/../${summa.ilib.storage.api}" todir="${lib.dir}"/>
        <copy file="${basedir}/../${summa.ilib.search.api}" todir="${lib.dir}"/>
        <copy file="${basedir}/../${summa.ilib.ingest}" todir="${lib.dir}"/>
        <copy file="${basedir}/../${summa.ilib.control.api}" todir="${lib.dir}"/>

        <!-- Store space-separated list of lib-filenames in lib.files -->
        <pathconvert refid="lib.path" property="lib.files" pathsep=" ">
            <map from="${lib.dir}/" to=""/>
        </pathconvert>
    </target>

    <target name="clean">
        <delete dir="${build.dir}"/>
        <delete dir="${tmp.dir}"/>
        <delete dir="${test.report.dir}" />
    </target>

    <target name="distclean" depends="clean">
        <delete dir="${dist.dir}"/>
        <delete dir="${lib.dir}"/>
        <delete dir="${doc.dir}"/>
    </target>

    <target name="compiletest" depends="compile">
        <javac srcdir="${test.src.dir}" destdir="${build.dir}"
               encoding="UTF-8" verbose="true" >
            <classpath refid="test.lib.path" />
            <!--<classpath refid="lib.internal"/>-->
        </javac>
    </target>

    <target name="runtest" depends="compiletest">
        <delete dir="${test.report.dir}" />
        <mkdir dir="${test.report.dir}" />
        <junit printsummary="yes" dir="${basedir}" fork="true">
            <classpath refid="test.lib.path" />
            <!--<classpath refid="lib.internal"/>-->
            <formatter type="xml" usefile="true" />
            <batchtest todir="${test.report.dir}">
                <formatter type="brief" />
                <fileset dir="${test.src.dir}">
			        <include name="**/*.java" />
                </fileset>
            </batchtest>
        </junit>
    </target>

    <target name="createjunitoutput" depends="runtest">
        <junitreport todir="${test.report.dir}">
            <fileset dir="${test.report.dir}" />
            <report todir="${test.report.dir}" />
        </junitreport>
    </target>

    <target name="cleancompiletest" depends="clean, compiletest" />

    <target name=".getLibs">
        <delete dir="${lib.dir}"/>
        <mkdir dir="${lib.dir}"/>
        <copy file="${basedir}/../${summa.lib.log4j}" tofile="${summa.lib.log4j}"/>
        <copy file="${basedir}/../${summa.lib.commons-logging}" tofile="${summa.lib.commons-logging}"/>
        <copy file="${basedir}/../${summa.lib.commons-cli}" tofile="${summa.lib.commons-cli}"/>
        <copy file="${basedir}/../${summa.lib.junit}" tofile="${summa.lib.junit}"/>
        <copy file="${basedir}/../${summa.lib.sbutil}" tofile="${summa.lib.sbutil}"/>
    </target>


    <target name="compile" depends="depends">
        <mkdir dir="${build.dir}"/>
        <javac srcdir="${src.dir}" destdir="${build.dir}" encoding="UTF-8"
               compiler="${compiler}" optimize="${compiler.optimize}"
               debug="${compiler.debug}">
            <classpath refid="lib.path"/>
        </javac>
    </target>


    <target name="doc" depends="compile">
        <mkdir dir="${doc.dir}"/>
        <javadoc
                packagenames="dk.statsbiblioteket.summa.*"
                destdir="${doc.dir}"
                author="true"
                version="true"
                access="private"
                windowtitle="Summa Metadata Storage"
                additionalparam="-breakiterator">

            <classpath refid="lib.path"/>

            <packageset dir="${src.dir}">
                <include name="dk/statsbiblioteket/summa/**"/>
            </packageset>
        </javadoc>

    </target>

    <target name=".jar" depends="compile">
        <delete dir="${tmp.dir}"/>
        <mkdir dir="${tmp.dir}"/>

        <mkdir dir="${dist.dir}"/>

        <!-- Prepare libs for bundling -->
        <unzip dest="${tmp.dir}">
            <patternset>
                <include name="**/*"/>
                <exclude name="**/*Test.java"/>
            </patternset>
            <fileset dir="lib">
                <include name="*.jar"/>
                <exclude name="junit*.jar"/>
            </fileset>
        </unzip>

        <!-- Prepare clearandgo class files -->
        <copy todir="${tmp.dir}">
            <fileset dir="${build.dir}"
                 includes="dk/statsbiblioteket/summa/workflow/**/*"/>
        </copy>

        <copy file="${config.dir}/log4j.xml" todir="${tmp.dir}"/>

        <!-- Roll the .jar -->
        <jar basedir="${tmp.dir}" compress="true"
             jarfile="${dist.dir}/${release.jar}" includes="**/*">
            <manifest>
                <attribute name="Main-Class"
                    value="dk.statsbiblioteket.summa.workflow.Main"/>
            </manifest>
        </jar>
    </target>

    <target name="release" depends="distclean, .jar, doc">

        <mkdir dir="${dist.dir}"/>

        <property name="prefix" value="${release}"/>

        <replaceregexp match="\$Id[^\$]*\$" replace="${project.name}-${project.version} - build date ${build.time}">
            <fileset dir="${doc.dir}" includes="**/*"/>
         </replaceregexp>

        <zip destfile="${dist.dir}/${release}.zip">

            <zipfileset prefix="${prefix}" dir="${dist.dir}"
                        includes="${release.jar}"/>

            <zipfileset dir="${doc.dir}" prefix="${prefix}/${summa.apidocs.dir}">
                <include name="**/*"/>
            </zipfileset>

        </zip>

    </target>



    <target name="all" depends="release"/>

</project>


